


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"> <!-- This ensures that the content fills the screen initially -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOG NUTRITION"
                android:textColor="@color/iconblue"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Details"
            android:textColor="@color/iconblue"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:layout_marginBottom="40px"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/searchUserEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search user by name"
            android:padding="10dp"
            android:textColor="@color/iconblue"
            android:inputType="text" />

        <Button
            android:id="@+id/searchUserBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:backgroundTint="@color/iconblue"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"/>

        <ListView
            android:id="@+id/userListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <!-- Edit and Delete Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:id="@+id/editDeleteSection">

            <EditText
                android:id="@+id/editUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Name"
                android:padding="10dp"
                android:textColor="@color/iconblue"
                android:inputType="text"/>

            <EditText
                android:id="@+id/editUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Email"
                android:padding="10dp"
                android:textColor="@color/iconblue"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/editUserPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Password"
                android:padding="10dp"
                android:textColor="@color/iconblue"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/editUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Address"
                android:padding="10dp"
                android:textColor="@color/iconblue"
                android:inputType="text"/>

            <Button
                android:id="@+id/saveChangesBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:backgroundTint="@color/iconblue"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/deleteUserBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete User"
                android:backgroundTint="@color/iconblue"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
