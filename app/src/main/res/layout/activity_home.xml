


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="90px"
        android:layout_height="70px"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="910px"
        android:background="@drawable/logout"
        android:textColor="@color/white" />
    <ImageView
        android:layout_marginTop="50px"
        android:id="@+id/logoImage"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DOG NUTRITION"
        android:textColor="@color/iconblue"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textSize="45dp" />

    <TextView
        android:layout_marginTop="50px"
        android:id="@+id/welcomeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@color/iconblue"
        android:layout_marginBottom="10px"
        android:textStyle="normal" />

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="20dp"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/profileBtn"
            android:layout_width="0dp"
            android:layout_height="30px"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:text="Orders" />

        <Button
            android:id="@+id/catalogBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:text="Product Catalog" />

        <Button
            android:id="@+id/cartBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:text="Shopping Cart" />

        <Button
            android:id="@+id/educationBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:text="Educational Content" />

    </GridLayout>

    <Button
        android:id="@+id/feedbackBtn"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="5dp"
        android:text="Feedback" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:orientation="vertical"
        android:gravity="center"
        >

        <!-- Social Media Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/facebookIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook"
                android:layout_margin="8dp"
                android:onClick="openFacebookLink" />

            <ImageView
                android:id="@+id/twitterIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/twitter"
                android:layout_margin="8dp"
                android:onClick="openTwitterLink" />

            <ImageView
                android:id="@+id/instagramIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/instagram"
                android:layout_margin="8dp"
                android:onClick="openInstagramLink" />
        </LinearLayout>

        <!-- Copyright and Contact Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2024 Dog Nutrition"
            android:textColor="@color/iconblue"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact us at: info@dognutrition.com"
            android:textColor="@color/iconblue"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
